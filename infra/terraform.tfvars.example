# DigitalOcean Configuration
do_token = "your_digitalocean_api_token_here"

# Project Settings
project_name = "fishing-map"
environment  = "dev"  # dev, staging, prod

# Kubernetes Cluster Configuration
cluster_region      = "sao1"              # São Paulo, Brazil
kubernetes_version  = "1.29.1-do.0"       # Versão do K8s
node_pool_size      = "s-2vcpu-4gb"       # Tamanho dos nodes (~$24/node/mês)
node_pool_count     = 2                   # Quantidade inicial de nodes
node_pool_min_nodes = 1                   # Mínimo para autoscaling
node_pool_max_nodes = 5                   # Máximo para autoscaling

# Domain Configuration (opcional)
domain_name = ""  # Example: "yourdomain.com"

# Database Configuration
enable_managed_database = true                # Recomendado para K8s
database_size          = "db-s-2vcpu-4gb"    # Tamanho do banco gerenciado

# Load Balancer Configuration
enable_load_balancer = true    # LoadBalancer gerenciado ($12/mês)
enable_monitoring   = true     # Monitoramento avançado

# Spaces (Object Storage)
spaces_region = "nyc3"          # nyc3, ams3, sfo3, sgp1
enable_spaces_cdn = true        # CDN para assets públicos

# Exemplos de configurações por ambiente:

